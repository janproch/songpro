{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SongPro",
	"patterns": [
		{
			"include": "#delimiter"
		},
		{
			"include": "#headers"
		},
		{
			"include": "#directives"
		},
		{
			"include": "#chords"
		}
	],
	"repository": {
		"delimiter": {
			"patterns": [{
				"name": "constant.language.delimiter.songpro",
				"match": "^\\s*---\\s*$"
			}]
		},
		"headers": {
			"patterns": [{
				"name": "markup.heading.songpro",
				"match": "^(#)(.*)$",
				"captures": {
					"1": {
						"name": "punctuation.definition.heading.songpro"
					},
					"2": {
						"name": "entity.name.section.songpro"
					}
				}
			}]
		},
		"directives": {
			"patterns": [{
				"name": "meta.directive.songpro",
				"match": "^([@!])([^=]+)(=)(.*)$",
				"captures": {
					"1": {
						"name": "punctuation.definition.directive.songpro"
					},
					"2": {
						"name": "entity.name.tag.directive.attribute.songpro"
					},
					"3": {
						"name": "keyword.operator.assignment.songpro"
					},
					"4": {
						"name": "string.unquoted.directive.value.songpro"
					}
				}
			}]
		},
		"chords": {
			"patterns": [{
				"name": "entity.name.tag.chord.songpro",
				"match": "\\[([^\\]]*)\\]",
				"captures": {
					"0": {
						"name": "entity.name.tag.chord.songpro"
					},
					"1": {
						"name": "string.other.chord-name.songpro"
					}
				}
			}]
		}
	},
	"scopeName": ".source.songpro"
}